{
  "compilerOptions": {
    "outDir": "./dist/",
    "module": "commonjs",
    "target": "es6",
    "experimentalDecorators": true,
    "sourceMap": true,
    "noEmitOnError": false,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "plugins": [
      {
        "name": "ts-graphql-plugin",
        "schema": "generated/schema.json",
        "tag": "gql"
      }
    ]
  }
}